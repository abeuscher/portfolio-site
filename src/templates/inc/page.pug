doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no")
    title=locals.meta.title
    meta(name="author",content=locals.meta.author)
    meta(name="description",content=locals.meta.description)
    meta(name="keywords",content=locals.meta.keywords)
    meta(property="og:type",content="website")
    meta(property="og:url",content=locals.meta.site_url)
    meta(property="og:title",content=locals.meta.title)
    meta(property="og:image",content=locals.config.imgPath+locals.meta.site_thumb)
    meta(property="og:description",content=locals.meta.description)
    meta(name="twitter:title",content=locals.meta.title)
    meta(name="twitter:description",content=locals.meta.description)
    meta(name="twitter:image",content=locals.config.imgPath+locals.meta.site_thumb)
    meta(name="twitter:card",content="summary_large_image")
    meta(name="twitter:site",content=locals.meta.site_url)
    link(rel="icon",type="image/png",sizes="32x32",href=locals.config.imgPath + "favicon-32x32.png")
    link(rel="icon",type="image/png",sizes="96x96",href=locals.config.imgPath + "favicon-96x96.png")
    link(rel="icon",type="image/png",sizes="16x16",href=locals.config.imgPath + "favicon-16x16.png")
    meta(name="msapplication-TileColor",content="#ffffff")
    meta(name="msapplication-TileImage",content="/icons/ms-icon-144x144.png")
    meta(name="theme-color",content="#ffffff")
    link(href="https://fonts.googleapis.com/css?family=Cabin:400,700|Bad+Script:400,700",type="text/css",rel="stylesheet")
    link(href="css/screen.css",type="text/css",rel="stylesheet")
  body
    #hidden-thumb
      img(src=locals.config.imgPath+locals.meta.site_thumb,alt="")
    header
        h1!=locals.header.name
        h2=locals.header.site_title
    #top-nav
      ul
        each item in locals.header.contact
          li
            a(href=item.url)=item.text
        each item in locals.header.nav
          li
            a(href=item.url,class=item.class)=item.text        
    block content
    footer
      p=locals.footer.legal
    script(src='js/bundle.js')
